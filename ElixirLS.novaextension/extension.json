{
  "identifier": "raulchedrese.elixir-ls",
  "name": "ElixirLS",
  "organization": "Raul Chedrese",
  "description": "Elixir support for Nova",
  "version": "1.0",
  "categories": ["languages"],

  "main": "main.js",

  "entitlements": {
    "process": true,
    "filesystem": "readonly"
  },

  "activationEvents": ["onLanguage:elixir", "onWorkspaceContains:mix.exs"],

  "config": [
    {
      "key": "elixir-ls.language-server-path",
      "title": "Language Server Path",
      "type": "path",
      "placeholder": "/usr/local/bin/example"
    }
  ],

  "sidebars": [
    {
      "id": "raulchedrese.elixir-ls.sidebar",
      "name": "Elixir",
      "sections": [
        {
          "id": "raulchedrese.elixir-ls.sidebar.results",
          "name": "Results"
        }
      ]
    }
  ],

  "commands": {
    "editor": [
      {
        "title": "Find References",
        "command": "raulchedrese.elixir-ls.findReferences",
        "filters": {
          "syntaxes": ["elixir", "ex", "exs", "eex"]
        }
      },
      {
        "title": "Go to Definition",
        "command": "raulchedrese.elixir-ls.goToDefinition",
        "filters": {
          "syntaxes": ["elixir", "ex", "exs", "eex"]
        }
      }
    ]
  }
}
