<?xml version="1.0" encoding="UTF-8"?>
<syntax name="html+eex">
	<meta>
		<name>HTML (HEEx)</name>
		<type>markup</type>
		<preferred-file-extension>html.heex</preferred-file-extension>
		<parent>html</parent>
	</meta>
	
	<tree-sitter language="heex">
		<highlights path="heex/highlights.scm" />
	</tree-sitter>
	
	<detectors>
		<extension priority="1.0">html.heex</extension>
	</detectors>
	
	<indentation>
		<increase>
			<expression>(?x)
				&lt;(?!\?|(?:area|base|br|col|frame|hr|html|img|input|link|meta|param)\\b|[^&gt;]*/&gt;)
				([-_\.A-Za-z0-9]+)(?=\s|&gt;)\b[^&gt;]*&gt;(?!.*&lt;/\1&gt;)
				|&lt;!--(?!.*--&gt;)
				|&lt;\?php.+?\b(if|else(?:if)?|for(?:each)?|while)\b.*:(?!.*end\2)
				|\{[^}"']*$
			</expression>
		</increase>
		<decrease>
			<expression>(?x)
				^\s*
				(&lt;/(?!html)
					[-_\.A-Za-z0-9]+\b[^>]*&gt;
					|-->
					|&lt;\?(php)?\s+(else(if)?|end(if|for(each)?|while)|\})
					|\}
				)</expression>
		</decrease>
	</indentation>
	
	<comments>
		<multiline>
			<starts-with>
				<expression>&lt;!--</expression>
			</starts-with>
			<ends-with>
				<expression>--&gt;</expression>
			</ends-with>
		</multiline>
	</comments>
	
	<brackets>
		<pair open="&lt;" close="&gt;" />
	</brackets>
	
	<surrounding-pairs>
		<pair open="&lt;" close="&gt;" />
		<pair open="{" close="}" />
		<pair open="[" close="]" />
		<pair open="(" close=")" />
		<pair open="&apos;" close="&apos;" />
		<pair open="&quot;" close="&quot;" />
		<pair open="`" close="`" />
	</surrounding-pairs>
	
	<scopes>
		<unknown spell-check="true" lookup="dictionary" />
		
		<include syntax="eex" collection="*" />
		<include syntax="html" />
	</scopes>
</syntax>
